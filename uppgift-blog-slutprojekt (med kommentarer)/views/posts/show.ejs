<%- include("./../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">En blog om inget särskilt</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                      <!-- HÄR SKA VI LÄGGA IN DET SPECIFKA INLÄGGETS BILDLÄNK -->
                <img class="img-responsive" src="<%= post.image %>">
                <div class="caption-full">
                    <h4><a>   <!-- INLÄGGETS TITEL --> <%= post.title %></a></h4>
                    <p></p><!-- INLÄGGETS BODY (INNEHÅLL) --><%= post.body %></p>

                </div>
               <!-- HÄR SKA VI LÄGGA IN DET SPECIFKA INLÄGGETS ID FÖR ATT KUNNA UPPDATERA ELLER TA BORT SPECIFIKT INLÄGG -->
                    <a class="btn btn-xs btn-warning" href="/posts/<%= post._id %>/edit">Uppdatera</a>
                    <form id="delete-form" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Ta bort</button>
                    </form>
                    <a class="btn btn-xs btn-success" href="/posts/<%= post._id %>/comments/new">Skriva ny kommentar</a>
        
            </div>
            <!-- HÄR SKULLE MAN EV KUNNA LÄGGA IN KOMMENTARER I FRAMTIDEN -->
            <% post.comments.forEach(function(comment) { %>
                <p>
                    <strong>  <%= comment.text %> </strong> skriven av <%= comment.author.username %>
                    </p>

                <% })%>
        </div>
    </div>
</div>

<%- include("./../partials/footer") %>