<%- include("./../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Skapa en ny kommentar för <%= post.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="text">
                </div>
    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Skicka!</button>
                </div>
            </form>
            <a href="/posts">Gå tillbaka</a>
        </div>
    </div>
</div>
<%- include("./../partials/footer") %>